@page
@model LoginModel

@{
    ViewData["Title"] = "Inloggen";
}
<section class="text-center" id="sign-in">
    <div class="body-sign-in">
        <div class="form-signin">
            <form id="account" method="post">
                <div class="d-flex justify-content-center align-content-center">
                    <img class="w-25" src="~/images/MovieFreakRound.png" />
                </div>
                <h1 class="h3 mt-4 fw-normal">@ViewData["Title"]</h1>
                <hr class="hr-blue my-4" />
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" id="floatingInput" placeholder="name@example.com" />
                    <label asp-for="Input.Email" for="floatingInput">E-mail adres</label>
                    <div class="text-start">
                        <span asp-validation-for="Input.Email" class="txt-color-link fs-s"></span>
                    </div>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control"
                           id="floatingPassword" placeholder="Password">
                    <label asp-for="Input.Password" for="floatingPassword">Wachtwoord</label>
                    <div class="text-start">
                        <span asp-validation-for="Input.Password" class="txt-color-link fs-s"></span>
                    </div>
                </div>
                <div class="form-floating">
                    <div class="checkbox my-4">
                        <label asp-for="Input.RememberMe" class="text-muted">
                            <input asp-for="Input.RememberMe" class="checkbox" type="checkbox" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-floating">
                    <button class="w-100 btn btn-lg btn-stnd" type="submit">Aanmelden</button>
                </div>
                <div class="form-floating">
                    <div class="text-muted fs-s mb-0 mt-4">
                        <a class="txt-color-link" id="forgot-password" asp-page="./ForgotPassword">Wachtwoord vergeten?</a>
                    </div>
                    <div class="text-muted fs-s mb-0 mt-4">
                        Nog geen account? <a class="txt-color-link" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registreer hier!</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
