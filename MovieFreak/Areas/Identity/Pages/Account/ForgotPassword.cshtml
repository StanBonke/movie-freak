@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Wachtwoord vergeten?";
}
<section class="text-center" id="sign-up">
    <div class="body-sign-in">
        <div class="form-signup">
            <form method="post">

                <div class="d-flex justify-content-center align-content-center">
                    <img class="w-25" src="~/images/MovieFreakRound.png" alt="">
                </div>
                <h1 class="h3 mt-4 fw-normal">@ViewData["Title"]</h1>
                <hr class="hr-blue my-4" />

                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" id="floatingInput" placeholder="name@example.com" />
                    <label asp-for="Input.Email" for="floatingInput">E-mail adres</label>
                    <div class="text-start">
                        <span asp-validation-for="Input.Email" class="txt-color-link fs-s"></span>
                    </div>
                </div>
                <div class="form-floating">
                    <button class="w-100 btn btn-lg btn-stnd my-4" type="submit">Verzenden</button>
                </div>

            </form>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
