@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="text-center" id="sign-up">
    <div class="body-sign-in">
        <div class="form-signup">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

                <div class="d-flex justify-content-center align-content-center">
                    <img class="w-25" src="~/images/MovieFreakRound.png" alt="">
                </div>
                <h1 class="h3 mt-4 fw-normal">@ViewData["title"]</h1>
                <hr class="hr-blue my-4" />

                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" id="floatingInput" placeholder="name@example.com" />
                    <label asp-for="Input.Email" for="floatingInput">Email address</label>
                    <div class="text-start">
                        <span asp-validation-for="Input.Email" class="txt-color-link fs-s"></span>
                    </div>
                </div>

                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control"
                           id="floatingPassword" placeholder="Password">
                    <label asp-for="Input.Password" for="floatingPassword">Password</label>
                    <div class="text-start">
                        <span asp-validation-for="Input.Password" class="txt-color-link fs-s"></span>
                    </div>
                </div>

                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control"
                           id="floatingPassword" placeholder="Password">
                    <label asp-for="Input.ConfirmPassword" for="floatingPassword">Confirm password</label>
                    <div class="text-start">
                        <span asp-validation-for="Input.ConfirmPassword" class="txt-color-link fs-s"></span>
                    </div>
                </div>

                <div class="form-floating">
                    <button class="w-100 btn btn-lg btn-stnd my-4" type="submit">Register</button>
                </div>

                <div class="form-floating">
                    <div class="text-muted fs-s mb-0">
                        Already have an account? <a class="txt-color-link" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login here!</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
