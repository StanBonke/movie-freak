@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}
<section class="container mt-3">
    <div class="row">
        <div class="col">
            <h1>Account</h1>
        </div>
    </div>

    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-6 mt-4 mb-5">
        @if (User.IsInRole("admin"))
        {
            <div class="col mb-3">
                <div class="card user-card">
                    <i class="fa-solid fa-film fa-main fa-card"></i>
                    <div class="card-body">
                        <h4 class="card-title text-center h4-details fs-6">Manage movies</h4>
                        <a href="/Admin/Index" class="stretched-link"></a>
                    </div>
                </div>
            </div>

            <div class="col mb-3">
                <div class="card user-card">
                    <i class="fa-solid fa-users fa-main fa-card"></i>
                    <div class="card-body">
                        <h4 class="card-title text-center h4-details fs-6">Manage users</h4>
                        <a href="/User/Index" class="stretched-link"></a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col mb-3">
                <div class="card user-card">
                    <i class="fa-solid fa-heart fa-main fa-card"></i>
                    <div class="card-body">
                        <h4 class="card-title text-center h4-details fs-6">Favorites</h4>
                        <a href="/Account/Index" class="stretched-link"></a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row">
        <h4>
            Change your account settings
        </h4>
    </div>

    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-6 mt-4">

        <div class="col mb-3">
            <div class="card user-card">
                <i class="fa-solid fa-user fa-main fa-card"></i>
                <div class="card-body">
                    <h4 class="card-title text-center h4-details fs-6">Profile</h4>
                    <a asp-page="./Index" class="stretched-link"></a>
                </div>
            </div>
        </div>

        <div class="col mb-">
            <div class="card user-card">
                <i class="fa-solid fa-at fa-main fa-card"></i>
                <div class="card-body">
                    <h4 class="card-title text-center h4-details fs-6">Email</h4>
                    <a asp-page="./Email" class="stretched-link"></a>
                </div>
            </div>
        </div>

        <div class="col mb-3">
            <div class="card user-card">
                <i class="fa-solid fa-key fa-main fa-card"></i>
                <div class="card-body">
                    <h4 class="card-title text-center h4-details fs-6">Password</h4>
                    <a asp-page="./ChangePassword" class="stretched-link"></a>
                </div>
            </div>
        </div>

        <div class="col mb-3">
            <div class="card user-card">
                <i class="fa-solid fa-fingerprint fa-main fa-card"></i>
                <div class="card-body">
                    <h4 class="card-title text-center h4-details fs-6">2FA</h4>
                    <a asp-page="./TwoFactorAuthentication" class="stretched-link"></a>
                </div>
            </div>
        </div>

        <div class="col mb-3">
            <div class="card user-card">
                <i class="fa-solid fa-address-card fa-main fa-card"></i>
                <div class="card-body">
                    <h4 class="card-title text-center h4-details fs-6">Personal data</h4>
                    <a asp-page="./PersonalData" class="stretched-link"></a>
                </div>
            </div>
        </div>

        

    </div>
</section>

<section class="container mt-5">
        <div class="row">
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
</section>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
