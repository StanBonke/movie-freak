@page
@model EmailModel
@{
    ViewData["Title"] = "E-mail beheer";
    ViewData["ActivePage"] = ManageNavPages.Email;
}
<div>
    <div class="row mb-2">
        <h3>@ViewData["Title"]</h3>
        <partial name="_StatusMessage" model="Model.StatusMessage" />
    </div>

    <div class="row">
        <div class="body-settings">
            <div class="form-settings">
                <form id="account" method="post">

                        @if (Model.IsEmailConfirmed)
                        {
                            <div class="form-floating">
                                <input asp-for="Email" type="email" class="form-control ps-1" id="floatingInput" placeholder="name@example.com" disabled/>
                                <label asp-for="Email" for="floatingInput" class="ps-0">Huidig e-mailadres</label>
                                <span class="text-success small" font-weight-bold">✓ Geverifieerd</span>
                            </div>

                            <div class="form-floating mt-3">
                                <input asp-for="Input.NewEmail" type="email" class="form-control ps-1" id="floatingInput" placeholder="name@example.com" />
                                <label asp-for="Input.NewEmail" for="floatingInput" class="ps-0">Nieuw e-mailadres</label>
                                
                                <span asp-validation-for="Input.NewEmail" class="txt-color-link"></span>
                            </div>

                            <div class="form-floating">
                            <button class="btn btn-stnd mt-3" id="change-email-button" type="submit" asp-page-handler="ChangeEmail">E-mail aanpassen</button>
                            </div>
                        }
                        else
                        {
                            <div class="form-floating">
                                <input asp-for="Email" class="form-control ps-1" disabled id="floatingInput" placeholder="name@example.com" />
                                <div class="form-floating">
                                    <button class="btn btn-stnd mt-3" id="email-verification" type="submit" asp-page-handler="SendVerificationEmail">Verstuur verificatie e-mail</button>
                                </div>
                            </div>
                            
                        }

                    
                </form>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

