@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Persoonlijke data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div>
    <div class="row mb-2">
        <div class="col-md-6">
            <h3>@ViewData["Title"]</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
            <p>
                <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
            </p>
        </div>
    </div>

    <div class="row row-cols-1 mb-3">
        <div class="col-2">
            <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
                <button class="btn btn-stnd" type="submit">Download</button>
            </form>
        </div>
        
    </div>

    <div class="row row-cols-1">
        <div class="col-2">
            <p>
                <a id="delete" asp-page="DeletePersonalData" class="btn btn-caution">Delete</a>
            </p>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}