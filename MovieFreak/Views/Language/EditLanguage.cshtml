@model MovieFreak.ViewModels.LanguageViewModels.EditLanguageViewModel;
@{
    ViewData["Title"] = "Taal toevoegen";
}
<section class="container mt-3">
    <div class="row">
        <div class="col">
            <h1>@ViewData["Title"]</h1>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col">
            <a asp-action="Index" class="link"><i class="fa fa-caret-left fa-main"></i> Back</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <hr class="hr-blue" />
        </div>
    </div>
</section>

<section class="container">
    <div class="row">
        <div class="col">
            <div class="body-settings">
                <div class="form-add">
                    <form asp-action="EditLanguage">

                        <div class="row">
                            <div class="col-7">
                                <div class="row">
                                    <div class="col-9">
                                        <div class="form-floating">
                                            <input asp-for="GesprokenTaal" type="text" class="form-control" id="floatingInput" placeholder="firstname" />
                                            <label asp-for="GesprokenTaal" for="floatingInput">Language</label>
                                            <div class="text-start">
                                                <span asp-validation-for="GesprokenTaal" class="txt-color-link fs-s"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <div class="form-floating text-start">
                                            <button type="submit" value="Create" class="btn btn-caution my-3">Add</button>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}