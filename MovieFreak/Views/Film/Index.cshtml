@model MovieFreak.ViewModels.FilmViewModel;

@{
    ViewData["Title"] = "Films";
}

<section class="container mt-3">
    <div class="row row-cols-1 row-cols-md-2">
        <div class="col-8">
            <h1 class="m-0 pb-3 pb-sm-0">Films</h1> 
        </div>
        <div class="col-4">
            <div class="input-group py-1">
                <span class="input-group-text border-orange" id="search-addon"><i class="fa-solid fa-magnifying-glass fa-main"></i></span>
                <input type="search" class="form-control border-orange" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
            </div>
        </div>
    </div>
    <div class="row py-1">
        <div class="col">
            <hr class="hr-blue" />
        </div>
    </div>
</section>

