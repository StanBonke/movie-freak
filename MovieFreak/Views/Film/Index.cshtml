@model MovieFreak.ViewModels.FilmViewModels.FilmViewModel;

@{
    ViewData["Title"] = "Films";
}

<section class="container mt-3">
    <div class="row row-cols-1 row-cols-md-2">
        <div class="col-8">
            <h1 class="m-0 pb-3 pb-sm-0">@ViewData["Title"]</h1>
        </div>
        <div class="col-4">
            <div class="input-group py-1">
                <span class="input-group-text border-orange" id="search-addon"><i class="fa-solid fa-magnifying-glass fa-main"></i></span>
                <input type="search" class="form-control border-orange" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
            </div>
        </div>
    </div>
    <div class="row py-1">
        <div class="col">
            <hr class="hr-blue" />
        </div>
    </div>
</section>

@*LAPTOP & TABLET*@
<section class="container d-none d-sm-block">
    <div class="row row-cols-1 row-cols-lg-2">

        @foreach (var f in Model.Films.OrderBy(x => x.Titel))
        {
            <div class="col">
                <div class="card mb-4 border-0" style="max-width: 540px;">
                    <div class="row gx-0">
                        <div class="col-md-5">
                            <a asp-controller="Film" asp-action="FilmDetails" asp-route-id="@f.Id">
                                <img src="/images/placeholder-film.png" class="img-fluid rounded">
                            </a>
                        </div>
                        <div class="col-md-7 py-2">
                            <div class="card-body py-0">
                                <h5 class="card-title mt-0 mb-1">@f.Titel</h5>
                                <p class="card-text my-0 fs-5">
                                    <small class="text-muted">
                                        @if(f.GenreId == f.Genre.Id){
                                            @f.Genre.FilmGenre
                                        }
                                    </small>
                                </p>

                                @foreach(var p in Model.Personages){
                                    if (p.Persoon.Rol == "Regisseur" && f.Id == p.FilmId)
                                    {
                                        <p class="card-text my-2 fs-5"><small class="text-muted">@p.Persoon.Voornaam @p.Persoon.Achternaam</small></p>
                                    }
                                }

                                @foreach (var p in Model.Personages )
                                {
                                    if (p.Persoon.Rol == "Acteur" && f.Id == p.FilmId)
                                    {
                                        <p class="card-text my-0 fs-5"><small class="text-muted">@p.Persoon.Voornaam @p.Persoon.Achternaam</small></p>
                                    }
                                }

                            </div>

                            @*LAPTOP*@
                            <div class="card-body py-0 d-none d-lg-block">
                                <button class="btn btn-details link px-2 pb-0 mb-2">
                                    <i class="fa fa-caret-right fa-main"></i> Details
                                    <a class="stretched-link" asp-controller="Film" asp-action="FilmDetails" asp-route-id="@f.Id"></a>
                                </button>
                            </div>

                            @*TABLET*@
                            <div class="card-body py-0 d-lg-none">
                                <button class="btn btn-details-tablet px-2 pb-0 mb-2">
                                    <i class="fa fa-caret-right fa-main"></i> Details
                                    <a class="stretched-link" asp-controller="Film" asp-action="FilmDetails" asp-route-id="@f.Id"></a>
                                </button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</section>

@*SMARTPHONE*@
<section class="container d-md-none">
    <div class="row row-cols-2 g-4">

        @foreach (var f in Model.Films.OrderBy(x => x.Titel))
        {
            <div class="col">
                <div class="card bg-dark text-white">
                    <img src="/images/placeholder-film.png" class="card-img" alt="...">
                    <div class="card-img-overlay">
                        <h5 class="card-title">@f.Titel</h5>
                        <p class="card-text genre-mobile">
                            @if (f.GenreId == f.Genre.Id)
                            {
                                @f.Genre.FilmGenre
                            }
                        </p>
                        <a class="stretched-link" asp-controller="Film" asp-action="FilmDetails" asp-route-id="@f.Id"></a>
                    </div>
                </div>
            </div>
        }

    </div>
</section>