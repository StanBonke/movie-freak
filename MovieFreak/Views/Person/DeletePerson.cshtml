@model MovieFreak.ViewModels.PersonViewModels.DeletePersonViewModel;
@{
    ViewData["Title"] = $"{Model.Rol} verwijderen?";
}
<section class="container mt-3">
    <div class="row">
        <div class="col">
            <h1>@ViewData["Title"]</h1>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col">
            <a asp-action="Index" class="link"><i class="fa fa-caret-left fa-main"></i> Terug</a>
        </div>
    </div>

    <div class="row">
        <div class="col my-2">
            <hr class="hr-blue" />
        </div>
    </div>

    <div class="row">
        <div class="col">
            <h4>Weet u zeker dat u <span class="txt-color-link">@Model.Voornaam @Model.Achternaam</span> wilt verwijderen?</h4>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col">
            <form asp-action="DeletePerson">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="@Model.Rol verwijderen" class="btn btn-caution" />
            </form>
        </div>
    </div>

</section>