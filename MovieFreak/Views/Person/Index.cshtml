@model MovieFreak.ViewModels.PersonViewModels.PersonsViewModel;
@{
    ViewData["Title"] = "Personen";
}
<section class="container mt-3">
    <div class="row">
        <div class="col">
            <h1>@ViewData["Title"]</h1>
        </div>
    </div>

    <div class="row row-cols-2">
        <div class="col-6 mt-3">
            <a asp-controller="Admin" asp-action="Index" class="link"> <i class="fa fa-caret-left fa-main"></i> Terug</a>
        </div>
        <div class="col-6 mt-3 text-end">
            <a asp-action="AddPerson" class="link">Persoon toevoegen <i class="fa fa-caret-right fa-main"></i></a>
        </div>
    </div>

    <div class="row my-2">
        <div class="col">
            <hr class="hr-blue" />
        </div>
    </div>

    <div class="row">
        <div class="col">

            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="pills-all-tab" data-bs-toggle="pill" data-bs-target="#pills-all" type="button" role="tab" aria-controls="pills-all" aria-selected="true">Alle</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pills-actors-tab" data-bs-toggle="pill" data-bs-target="#pills-actors" type="button" role="tab" aria-controls="pills-actors" aria-selected="false">Acteurs</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pills-directors-tab" data-bs-toggle="pill" data-bs-target="#pills-directors" type="button" role="tab" aria-controls="pills-directors" aria-selected="false">Regisseurs</button>
                </li>
            </ul>

            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-all" role="tabpanel" aria-labelledby="pills-all-tab">

                    <div class="row">
                        <div class="col table-responsive">
                            <table class="table">
                                <thead class="table-header">
                                    <tr>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Id)</th>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Voornaam)</th>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Achternaam)</th>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Geboortedatum)</th>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Geboorteplaats)</th>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Geboorteland)</th>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Rol)</th>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Biografie)</th>
                                        <th class="txt-color-dark" scope="col"> </th>
                                        <th class="txt-color-dark" scope="col"> </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var p in Model.Personen)
                                    {
                                        <tr>
                                            <td class="py-3">@p.Id</td>
                                            <td class="py-3">@p.Voornaam</td>
                                            <td class="py-3">@p.Achternaam</td>
                                            <td class="py-3">@p.Geboortedatum.ToString("dd/MM/yyyy")</td>
                                            <td class="py-3">@p.Geboorteplaats</td>
                                            <td class="py-3">@p.Geboorteland</td>
                                            <td class="py-3">@p.Rol</td>
                                            <td class="py-3">
                                                <a tabindex="0" class="link" role="button" data-bs-toggle="popover" data-bs-trigger="focus" title="Biografie - @p.Voornaam @p.Achternaam" data-bs-custom-class="custom-popover" data-bs-content="@p.Biografie">
                                                    > Bio
                                                </a>
                                            </td>
                                            <td class="py-3">
                                                <a  asp-action="EditPerson" asp-route-id="@p.Id" data-bs-toggle="tooltip" title="Persoon aanpassen">
                                                    <i class="fa fa-pencil fa-main-accent"></i>
                                                </a>
                                            </td>
                                            <td class="py-3">
                                                <a  asp-action="DeletePerson" asp-route-id="@p.Id" data-bs-toggle="tooltip" title="Persoon verwijderen">
                                                    <i class="fa fa-close fa-main-close"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
                <div class="tab-pane fade" id="pills-actors" role="tabpanel" aria-labelledby="pills-actors-tab">

                    <div class="row">
                        <div class="col table-responsive">
                            <table class="table">
                                <thead class="table-header">
                                    <tr>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Id)</th>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Voornaam)</th>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Achternaam)</th>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Geboortedatum)</th>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Geboorteplaats)</th>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Geboorteland)</th>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Rol)</th>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Biografie)</th>
                                        <th class="txt-color-dark" scope="col"> </th>
                                        <th class="txt-color-dark" scope="col"> </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var p in Model.Personen)
                                    {
                                        if(p.Rol == "Acteur")
                                        {
                                            <tr>
                                                <td class="py-3">@p.Id</td>
                                                <td class="py-3">@p.Voornaam</td>
                                                <td class="py-3">@p.Achternaam</td>
                                                <td class="py-3">@p.Geboortedatum.ToString("dd/MM/yyyy")</td>
                                                <td class="py-3">@p.Geboorteplaats</td>
                                                <td class="py-3">@p.Geboorteland</td>
                                                <td class="py-3">@p.Rol</td>
                                                <td class="py-3">
                                                    <a tabindex="0" class="link" role="button" data-bs-toggle="popover" data-bs-trigger="focus" title="Biografie - @p.Voornaam @p.Achternaam" data-bs-custom-class="custom-popover" data-bs-content="@p.Biografie">
                                                        > Bio
                                                    </a>
                                                </td>
                                                <td class="py-3">
                                                    <a class="" asp-action="EditPerson" asp-route-id="@p.Id" data-bs-toggle="tooltip" title="Persoon aanpassen">
                                                        <i class="fa fa-pencil fa-main-accent"></i>
                                                    </a>
                                                </td>
                                                <td class="py-3">
                                                    <a class="" asp-action="DeletePerson" asp-route-id="@p.Id" data-bs-toggle="tooltip" title="Persoon verwijderen">
                                                        <i class="fa fa-close fa-main-close"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
                <div class="tab-pane fade" id="pills-directors" role="tabpanel" aria-labelledby="pills-directors-tab">

                    <div class="row">
                        <div class="col table-responsive">
                            <table class="table">
                                <thead class="table-header">
                                    <tr>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Id)</th>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Voornaam)</th>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Achternaam)</th>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Geboortedatum)</th>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Geboorteplaats)</th>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Geboorteland)</th>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Rol)</th>
                                        <th class="txt-color-dark" scope="col">@Html.DisplayNameFor(model => model.Personen[0].Biografie)</th>
                                        <th class="txt-color-dark" scope="col"> </th>
                                        <th class="txt-color-dark" scope="col"> </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var p in Model.Personen)
                                    {
                                        if (p.Rol == "Regisseur")
                                        {
                                            <tr>
                                                <td class="py-3">@p.Id</td>
                                                <td class="py-3">@p.Voornaam</td>
                                                <td class="py-3">@p.Achternaam</td>
                                                <td class="py-3">@p.Geboortedatum.ToString("dd/MM/yyyy")</td>
                                                <td class="py-3">@p.Geboorteplaats</td>
                                                <td class="py-3">@p.Geboorteland</td>
                                                <td class="py-3">@p.Rol</td>
                                                <td class="py-3">
                                                    <a tabindex="0" class="link" role="button" data-bs-toggle="popover" data-bs-trigger="focus" title="Biografie - @p.Voornaam @p.Achternaam" data-bs-custom-class="custom-popover" data-bs-content="@p.Biografie">
                                                        > Bio
                                                    </a>
                                                </td>
                                                <td class="py-3">
                                                    <a class="" asp-action="EditPerson" asp-route-id="@p.Id" data-bs-toggle="tooltip" title="Persoon aanpassen">
                                                        <i class="fa fa-pencil fa-main-accent"></i>
                                                    </a>
                                                </td>
                                                <td class="py-3">
                                                    <a class="" asp-action="DeletePerson" asp-route-id="@p.Id" data-bs-toggle="tooltip" title="Persoon verwijderen">
                                                        <i class="fa fa-close fa-main-close"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>

</section>
