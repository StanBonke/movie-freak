@model MovieFreak.ViewModels.AdminViewModels.AddFilmLanguageViewModel;
@{
    ViewData["Title"] = "Datalink language";
}

<section class="container mt-3">
    <div class="row">
        <div class="col">
            <h1>@ViewData["Title"]</h1>
        </div>
    </div>

    <div class="row row-cols-2">
        <div class="col-6 mt-3">
            <a asp-controller="Admin" asp-action="Index" class="link"> <i class="fa fa-caret-left fa-main"></i> Back</a>
        </div>
    </div>

    <div class="row my-2">
        <div class="col">
            <hr class="hr-blue" />
        </div>
    </div>
</section>


<div class="row">
    <div class="col">

        <div class="body-settings">
            <div class="form-add">
                <form asp-action="AddFilmLanguage">

                    <div class="row row-cols-2">
                        <div class="col-5 col-md-3">
                            <div class="form-floating">
                                <input asp-for="FilmId" type="number" class="form-control" id="floatingInput" placeholder="firstname" />
                                <label asp-for="FilmId" for="floatingInput">Movie Id</label>
                                <div class="text-start">
                                    <span asp-validation-for="FilmId" class="txt-color-link fs-s"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-5 col-sm-4 col-md-3">
                            <div class="form-floating">
                                <input asp-for="TaalId" type="number" class="form-control" id="floatingInput" placeholder="firstname" />
                                <label asp-for="TaalId" for="floatingInput">Language Id</label>
                                <div class="text-start">
                                    <span asp-validation-for="TaalId" class="txt-color-link fs-s"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-floating text-start">
                                <button type="submit" value="Create" class="btn btn-caution my-3">Add</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
