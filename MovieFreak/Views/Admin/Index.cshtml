@model MovieFreak.ViewModels.AdminViewModel;
@{
    ViewData["Title"] = "Film beheer";
}

<section class="container mt-3">
    <div class="row">
        <div class="col">
            <h1>Film beheer</h1>
        </div>
    </div>

    <div class="row mt-3">
        <h4>
            Spotlight Movie aanpassen
        </h4>
    </div>

    <div class="row mt-2">
        <div class="col-3">
            <select class="form-select select" id="select">
                <option hidden selected>Selecteer een film</option>
                @foreach (var f in Model.Films)
                {
                    <option value="@f.Id">@f.Titel</option>
                }
            </select>
        </div>
        <div class="col-2">
            <button class="btn btn-stnd">> Opslaan</button>
        </div>
    </div>
</section>

<section class="container">

    <div class="row mt-5">
        <h4>
            Nieuwe film toevoegen
        </h4>
    </div>
</section>