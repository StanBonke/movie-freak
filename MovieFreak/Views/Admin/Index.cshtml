<section class="container">

    <div class="row mt-3 mb-2">
        <h4>
            General data
        </h4>
    </div>

    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5">
        <div class="col mb-3">
            <div class="card user-card">
                <i class="fa-solid fa-clapperboard fa-main fa-card"></i>
                <div class="card-body">
                    <h4 class="card-title text-center h4-details fs-5">Movies</h4>
                    <a asp-controller="Film" asp-action="Films" class="stretched-link"></a>
                </div>
            </div>
        </div>

        <div class="col mb-3">
            <div class="card user-card">
                <i class="fa-solid fa-user fa-main fa-card"></i>
                <div class="card-body">
                    <h4 class="card-title text-center h4-details fs-5">Persons</h4>
                    <a asp-controller="Person" asp-action="Index" class="stretched-link"></a>
                </div>
            </div>
        </div>

        <div class="col mb-3">
            <div class="card user-card">
                <i class="fa-solid fa-hashtag fa-main fa-card"></i>
                <div class="card-body">
                    <h4 class="card-title text-center h4-details fs-5">Genres</h4>
                    <a asp-controller="Genre" asp-action="Index" class="stretched-link"></a>
                </div>
            </div>
        </div>

        <div class="col mb-3">
            <div class="card user-card">
                <i class="fa-solid fa-language fa-main fa-card"></i>
                <div class="card-body">
                    <h4 class="card-title text-center h4-details fs-5">Languages</h4>
                    <a asp-controller="Language" asp-action="Index" class="stretched-link"></a>
                </div>
            </div>
        </div>
    </div>

</section>

<section class="container">
    <div class="row mt-5 mb-2">
        <h4>
            Data linking
        </h4>
    </div>
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5">
        <div class="col mb-3">
            <div class="card user-card">
                <div class="card-body">
                    <h4 class="card-title text-center h4-details pt-2 fs-6">Person <i class="fa-solid fa-link fa-main"></i> Movie</h4>
                    <a asp-controller="Admin" asp-action="AddCharacter" class="stretched-link"></a>
                </div>
            </div>
        </div>

        <div class="col mb-3">
            <div class="card user-card">
                <div class="card-body ">
                    <h4 class="card-title text-center h4-details pt-2 fs-6">Language <i class="fa-solid fa-link fa-main"></i> Movie</h4>
                    <a asp-controller="Admin" asp-action="AddFilmLanguage" class="stretched-link"></a>
                </div>
            </div>
        </div>
    </div>
</section>