@model MovieFreak.ViewModels.HomeViewModels.HomeViewModel;
@{
    ViewData["Title"] = "Home";
}

@*LAPTOP LARGE*@
<section class="container d-none d-xl-block">

    <div class="row gx-5">
        <div class="col">
            <div class="p-3 mt-3">
                <img class="position-absolute" src="~/images/movie-freak-home.png" alt="MovieFreakRoundLogo">
            </div>
        </div>
    </div>

    <div class="row gx-5 spotlight">

        @foreach (Film f in Model.Films)
        {
            if (f.Id == 1)
            {
                <div class="col">
                    <div class="p-3">
                        <img class="img-thumbnail img-trans" src="~/images/placeholder.png" alt="Placeholder">
                    </div>
                </div>
                <div class="col">
                    <div class="p-3 ">
                        <h1 class="m-0">
                            @f.Titel
                        </h1>
                        <div class="container px-0 py-3">
                            <div class="row m-0 p-0">
                                <div class="col-3 h4  p-0">
                                    <h5>@f.Duurtijd</h5>
                                </div>
                                <div class="col-3 h4 ">
                                    @foreach (var t in this.Model.FilmTalen)
                                    {
                                        @if (t.Id == t.FilmId)
                                        {
                                            <h5 class="col h4">
                                                @t.Taal.GesprokenTaal
                                            </h5>
                                            break;
                                        }
                                        
                                    }
                                </div>
                                <div class="col-3 h4 ">
                                    <h5>@f.Genre.FilmGenre</h5>
                                </div>
                            </div>
                        </div>
                        <hr class="hr-blue m-0" />
                        <div class="text-container">
                            <p class="fs m-0">
                                @f.Omschrijving
                            </p>
                        </div>
                        <div>
                            <a asp-controller="Film" asp-action="FilmDetails" asp-route-id="@f.Id" class="btn btn-stnd">
                                Ontdek meer
                            </a>
                        </div>
                    </div>
                </div>
            }

        }

    </div>

    @if(@User.IsInRole("admin")){
        <div class="row ms-2 mt-2">
            <div class="col-3">
                <h5>Verander Spotlight Movie</h5>
                <select class="form-select select" id="select">
                    <option hidden selected>Selecteer een film</option>
                    @foreach (var f in Model.Films)
                    {
                        <option value="@f.Id">@f.Titel</option>
                    }
                </select>
            </div>
        </div>
    }
    
    
</section>

