@model MovieFreak.ViewModels.GenreViewModels.DeleteGenreViewModel;
@{
    ViewData["Title"] = $"Delete Genre";
}

<section class="container mt-3">
    <div class="row">
        <div class="col">
            <h1>@ViewData["Title"]</h1>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <a asp-action="Index" class="btn btn-stnd"><i class="fa fa-caret-left fa-light"></i> Back</a>
        </div>
    </div>
    <div class="row">
        <div class="col my-2">
            <hr class="hr-blue" />
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h4>Are you sure you want to remove genre: <span class="txt-color-link">"@Model.FilmGenre"</span> from the database?</h4>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <form asp-action="DeleteGenre">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Yes I'm sure" class="btn btn-caution" />
            </form>
        </div>
    </div>
</section>